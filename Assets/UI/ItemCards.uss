.name-container {
    height: 30px;
    margin-bottom: 5px;
    border-bottom-width: 1px;
    border-bottom-color: rgb(80, 80, 80);
}

.name {
    -unity-font-style: bold;
    font-size: 16px;
    color: white;
    -unity-text-align: middle-center;
}

.description-container {
    flex-grow: 1;
    overflow: hidden;
}

.description {
    color: rgb(200, 200, 200);
    white-space: normal;
    font-size: 14px;
    flex-wrap: wrap;
    padding: 5px;
    overflow: hidden;
    text-overflow: ellipsis;
}

#Logs-Container {
    flex-direction: row;
    padding: 10px;
    height: 100%;
}

#LeftSide {
    flex-grow: 1;
    height: 100%;
}

Button {
    margin: 5px;
    padding: 5px 10px;
}