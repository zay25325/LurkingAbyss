#Object-Cards {
    padding: 10px;
    flex-grow: 1;
    flex-wrap: wrap;
    flex-direction: row;
}

.object-card {
    width: 200px;
    height: 150px;
    min-width: 200px;
    min-height: 150px;
    background-color: rgb(40, 40, 40);
    border-radius: 5px;
    padding: 10px;
    margin: 10px;
    flex-direction: column;
    overflow: hidden;
    transform-style: preserve-3d;
    transition: transform 0.6s;
    position: relative;
}

.object-card:hover {
    background-color: rgb(60, 60, 60);
    scale: 1.02;
    transition: all 0.6s;
}

.card-front, .card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    background-color: rgb(40, 40, 40);
    border-radius: 5px;
    padding: 10px;
}
